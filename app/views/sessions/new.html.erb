<div class="sm_form_container" style="height: auto;">
<h1>Login</h1>

<%= form_tag sessions_path do %>
      <% if flash[:notice] %>
          <div class="error_messages">
            <ul style="margin-left: 10px; margin-top: 10px;">
              <li><%= flash[:notice] %></li>
            </ul>
          </div>
      <% end %>
    <div class="row">
        <div class="field">
            <%= label_tag :email %><br/>
            <%= text_field_tag :email, params[:email] %>
        </div>
    </div>
    <div class="row">
        <div class="field">
            <%= label_tag :password%><br/>
            <%= password_field_tag :password %>
        </div>
    </div>
    <div class="row">
      <div class="field">
	    <span style="float:right;margin-right: 45px;"><%= link_to "forgotten password?", new_password_reset_path %></span>
      </div>
    </div>
    <div class="row">
        <div class="field">
            <%= check_box_tag :remember_me, 1, params[:remember_me] %>
            <%= label_tag :remember_me %>
        </div>
    </div>
    <div class="row">
	    <div class="field"><%= submit_tag "Log In", :class => 'btn' %></div>
    </div>
<% end %>
</div>